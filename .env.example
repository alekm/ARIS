# ARIS Environment Configuration
# Copy this file to .env and update with your settings

# ============================================
# API Configuration
# ============================================
API_PORT=8000
API_HOST=0.0.0.0

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379

# ============================================
# Audio Capture Configuration
# ============================================
# Mode: mock or kiwi
MODE=kiwi

# KiwiSDR settings (for mode: kiwi)
KIWI_HOST=172.16.250.99
KIWI_PORT=8073
KIWI_PASSWORD=
KIWI_AGC=true
KIWI_AGC_THRESH=-100
KIWI_AGC_SLOPE=6
KIWI_AGC_DECAY=1000
KIWI_MAN_GAIN=48 # Used if KIWI_AGC=false
KIWI_AUDIO_ENDIAN=big # big or little (KiwiSDR usually big)
KIWI_LOW_CUT=300
KIWI_HIGH_CUT=2700

# Frequency and demodulation
FREQUENCY_HZ=7188000
DEMOD_MODE=USB

# ============================================
# STT (Speech-to-Text) Configuration
# ============================================
# Model size: tiny, base, small, medium, large-v2, large-v3
MODEL_SIZE=medium

# Device: cuda or cpu
DEVICE=cuda

# Voice activity detection threshold (0.0-1.0)
VAD_THRESHOLD=0.5

# ============================================
# LLM Configuration
# ============================================
# Backend: ollama, llama-cpp, or openai-compatible
LLM_BACKEND=ollama

# Model name/tag
LLM_MODEL=llama3.2:latest

# LLM server host (for Docker: use host.docker.internal or service name)
# For local deployment: localhost:11434
# For Docker: host.docker.internal:11434
# For Kubernetes/Docker Swarm: use service name or external IP
LLM_HOST=host.docker.internal:11434

# API key (if required for OpenAI-compatible backends)
LLM_API_KEY=

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=sqlite:////data/db/aris.db

# Logging level for all services (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=WARNING
