# ARIS Environment Configuration

# Audio Capture
MODE=mock  # mock or kiwi
KIWI_HOST=192.168.1.100
KIWI_PORT=8073
FREQUENCY_HZ=7200000
CAPTURE_MODE=USB

# STT Configuration
MODEL_SIZE=medium  # tiny, base, small, medium, large-v2, large-v3
DEVICE=cuda  # cuda or cpu
VAD_THRESHOLD=0.5
MAX_BUFFER_MS=30000
MIN_BUFFER_MS=1000

# LLM Summarization
LLM_BACKEND=ollama  # ollama, llama-cpp, or openai-compatible
LLM_MODEL=llama3.2:latest
LLM_HOST=host.docker.internal:11434

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# API
DATABASE_URL=sqlite:////data/db/aris.db
